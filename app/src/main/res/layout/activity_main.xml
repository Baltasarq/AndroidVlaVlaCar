<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.MainActivity">

    <!-- Consumo -->
    <LinearLayout
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText           android:id="@+id/edConsumo"
            android:inputType="numberSigned|numberDecimal"
            android:textAlignment="textEnd"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_consumo"/>

    </LinearLayout>

    <!-- Km -->
    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText           android:id="@+id/edKm"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_km"/>

    </LinearLayout>

    <!-- Tipo de carretera -->
    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText           android:id="@+id/edCarretera"
            android:text="A"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A/N/C"/>

    </LinearLayout>

    <!-- Tiempo -->
    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText           android:id="@+id/edHoras"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_hour"/>

        <EditText           android:id="@+id/edMinutos"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_minutes"/>

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_time"/>

    </LinearLayout>

    <!-- Botonera -->
    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton     android:id="@+id/btCalculaTiempo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_chronometer"/>

        <ImageButton     android:id="@+id/btCalculaConsumo"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_gasoline_pump"/>

    </LinearLayout>

</LinearLayout>